<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="16dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.alfredobejarano.bezirkpubexample.activity.MainActivity">

    <ImageButton
        android:id="@+id/back_button"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:src="@mipmap/ic_back"
        android:layout_marginTop="64dp"
        android:onClick="buttonPressed"
        android:layout_alignParentLeft="true" />

    <ImageButton
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginTop="64dp"
        android:onClick="buttonPressed"
        android:id="@+id/forward_button"
        android:src="@mipmap/ic_forward"
        android:layout_alignParentRight="true" />

    <ImageButton
        android:id="@+id/play_button"
        android:layout_width="128dp"
        android:layout_height="64dp"
        android:src="@mipmap/ic_play"
        android:onClick="buttonPressed"
        android:layout_alignTop="@+id/forward_button"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:onClick="buttonPressed"
        android:id="@+id/volume_down_button"
        android:layout_below="@id/back_button"
        android:src="@mipmap/ic_volume_down" />

    <ImageButton
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:onClick="buttonPressed"
        android:src="@mipmap/ic_volume_up"
        android:id="@+id/volume_up_button"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/forward_button" />

</RelativeLayout>
